<%= render 'layouts/search' %>
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @booknew %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tbody>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td class=<%= "favorite_buttons_" + @book.id.to_s %> >
            <%= render 'favorites/favorite',book: @book %>
          </td>
          <td>
            <span id = "comment_count"><%= @book.book_comments.count %></span> Comments
          </td>
          <% if @current_user == @book.user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
        </tbody>
      </table>
      <div id = "book-comments">
        <%= render 'comment', book: @book %>
      </div>
      <div id = "comment-form">
        <%= render 'comment-form', book: @book, book_comment: @book_comment %>
      </div>
    </div>
  </div>
</div>