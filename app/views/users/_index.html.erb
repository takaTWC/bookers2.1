<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td>
          <%= link_to user_path(user) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.followings.count %> Following</td>
        <td><%= user.followers.count %> Followers</td>
        <td id = "follow_buttons_<%= user.id %>" >
          <%= render 'relationships/follow_buttons', user: user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
